@page
@model SparkAuto.Pages.ServiceTypes.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-page">Service Type List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-page="create" class="btn bg-page">
                <i class="fas fa-plus"></i>&nbsp; New Create
            </a>
        </div>
    </div>
    <br />
    <div>
        @if (Model.ServiceType.Count == 0)
        {
            <p>Não existe serviço. Por favor crie um novo serviço.</p>
        }
        else
        {
            <table class="table table-sm table-striped">
                <thead class="bg-page">
                    <tr class="">
                        <th>
                            @Html.DisplayNameFor(m => m.ServiceType[0].Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.ServiceType[0].Price)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ServiceType)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Price)
                            </td>
                            <td style="width:150px;">
                                <div class="btn-group" role="group">
                                    <a asp-page="Edit" asp-route-Id="@item.Id" class="btn btn-primary text-white m-1">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-page="Details" asp-route-Id="@item.Id" class="btn btn-success text-white m-1">
                                        <i class="fas fa-list-alt"></i>
                                    </a>
                                    <a asp-page="Delete" asp-route-Id="@item.Id" class="btn btn-danger text-white m-1">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
